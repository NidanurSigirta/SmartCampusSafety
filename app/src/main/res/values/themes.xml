<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SmartCampusSafety" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="colorPrimary">@color/purple_500</item> <!-- uygulamanın ana rengi (en çok kullanılan) ayarlandı -->
        <item name="colorPrimaryVariant">@color/lavender</item> <!-- ikinci en çok kullanılacak renk,ikinci ana renk, colorPrimaryVariant'a atandı  -->
        <item name="colorOnPrimary">@color/white</item> <!-- bar üstüne konucak item (yazı icon vb.) rengi ayarlandı  -->

        <item name="colorSecondary">@color/teal_200</item> <!--  buton, seçim kutuları vb. yerlerde kullanılacak renk atandı -->
        <item name="colorOnSecondary">@color/black</item> <!-- yukarıdaki itemlerin üzerine getirelecek yazı - icon rengi ayarlandı  -->
        <item name="colorSecondaryVariant">@color/teal_700</item> <!-- Geçiş renklerinde kullanılacak (hover)  -->

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item> <!-- saat,pil'in olduğu kısımdaki bar rengi ikinci ana renk olarak ayarlandı.  -->

        <item name="titleTextColor">@color/white</item>

    </style>

    <style name="Theme.SmartCampusSafety" parent="Base.Theme.SmartCampusSafety" />
</resources>