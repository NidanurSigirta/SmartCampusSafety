<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Kırmızı Bildirim Noktası -->
        <View
            android:id="@+id/viewUnreadDot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/red_badge"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- İkon -->
        <ImageView
            android:id="@+id/ivFollowedIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_info_details"
            app:tint="#673AB7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Bilgiler -->
        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/ivFollowedIcon"
            app:layout_constraintEnd_toStartOf="@id/tvFollowedStatus"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvFollowedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bildirim Başlığı"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvFollowedType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sağlık"
                android:textSize="12sp"
                android:textColor="#757575"/>
        </LinearLayout>

        <!-- Durum -->
        <TextView
            android:id="@+id/tvFollowedStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AÇIK"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#D32F2F"
            android:background="#FFEBEE"
            android:padding="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"/>

        <!-- GÜNCELLEME KUTULARI ALANI (Alt alta dizilecekler) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/infoLayout">

            <!-- 1. KUTU: DURUM GÜNCELLEMESİ -->
            <LinearLayout
                android:id="@+id/layoutStatusUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#E3F2FD"
                android:padding="10dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    app:tint="#1976D2"/>

                <TextView
                    android:id="@+id/tvStatusMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Durum güncellendi."
                    android:textSize="13sp"
                    android:textColor="#0D47A1"
                    android:layout_marginStart="8dp"
                    android:textStyle="italic"/>
            </LinearLayout>

            <!-- 2. KUTU: AÇIKLAMA GÜNCELLEMESİ -->
            <LinearLayout
                android:id="@+id/layoutDescUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#E3F2FD"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="#1976D2"/>

                <TextView
                    android:id="@+id/tvDescMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Açıklama düzenlendi."
                    android:textSize="13sp"
                    android:textColor="#0D47A1"
                    android:layout_marginStart="8dp"
                    android:textStyle="italic"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>