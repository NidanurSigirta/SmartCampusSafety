<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvAdminReportTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bildirim Başlığı"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvAdminReportType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tür: Güvenlik"
            android:textColor="#555555"/>

        <TextView
            android:id="@+id/tvAdminReportStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durum: Açık"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/btnChangeStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Durumu Güncelle"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>