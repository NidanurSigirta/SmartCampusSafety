<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/example_login"
    tools:context=".MainActivity">

    <!-- Giriş ekranı penceresi yapımı -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom_edittext">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hoş Geldiniz!"
                android:id="@+id/loginText"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/lavender" />

            <!-- Kullanıcı giriş metin kutusu yapımı-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/username"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="Kullanıcı Adı"
                android:drawableLeft="@drawable/outline_account_circle_24"
                android:textColor="@color/black"
                android:drawablePadding="8dp"
                />

            <!-- Kullanıcı şifre metin kutusu yapımı-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/password"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:inputType="textPassword"
                android:padding="8dp"
                android:hint="Kullanıcı Şifre"
                android:drawableLeft="@drawable/lock_icon"
                android:textColor="@color/black"
                android:drawablePadding="8dp"
                />

            <!-- Şifremi Unuttum Kısmı  -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:text="Şifremi Unuttum?"
                android:id="@+id/forgotPasswordText"
                android:textColor="@color/lavender"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

            <!-- Giriş Butonu  -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Giriş"
                android:id="@+id/loginButton"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/lavender"
                app:cornerRadius = "20dp" />

            <!-- Kayıt Ol Butonu  -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Kayıt Ol"
                android:id="@+id/signUpButton"
                android:backgroundTint="@color/lavender"
                app:cornerRadius = "20dp" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>